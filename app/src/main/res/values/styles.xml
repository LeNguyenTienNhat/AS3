<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Facebook custom style-->
    <style name="small_text">
        <item name="android:textColor">@color/faded_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="clickable_text" parent="@style/small_text">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="input_field">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/faded_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/faded_white</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/faded_white</item>
        <item name="android:textColor">@color/faded_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="custom_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/faded_white</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>